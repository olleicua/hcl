#!/usr/bin/env node

var hcl = require('../lib/hclParser.js');
var fs = require('fs');

if (process.argv[2]) {
    fs.readFile(process.argv[2], function(err, text) {
        if (err) throw err;
        hcl.analyze(hcl.parse(hcl.scan(text.toString())));
		// TODO: compile and write to file
    });
} else {
	// TODO: implement a REPL
